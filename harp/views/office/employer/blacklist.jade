.employerOfficeBlacklist.competitorOfficeBlacklist
	.company(ng-repeat="i in blacklist")
		.row
			.col-xs-3.text-center.avatar
				img.img-responsive(ng-src="{{get_avatar_uri(i.profile.images)}}")
			.col-xs-6.info
				.col-xs-12.title
					h4 {{i.profile.info.firstname}} {{i.profile.info.lastname}} {{i.profile.info.middlename}}
				.col-xs-12.desc
					p причина занисения в чёрный список:
					p {{i.reason}}
			.col-xs-3.text-right
				.col-xs-12
					button.btn.btn-success(ng-click="removeOfBlacklist(i.id)") Пощадить
				.col-xs-12
					a(href="#/competitor/{{i.id}}") Подробнее

		hr









